# ============================================
# HyperStats Backend Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# ============================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://hyperstats:hyperstats_password@localhost:5432/hyperstats?schema=public"
POSTGRES_USER=hyperstats
POSTGRES_PASSWORD=hyperstats_password
POSTGRES_DB=hyperstats
POSTGRES_PORT=5432

# Server
PORT=8001
APP_PORT=8001
NODE_ENV=development

# HyperLiquid API
HYPERLIQUID_NODE_URL=https://api.hyperliquid.xyz
HYPERLIQUID_MAINNET_URL=https://api.hyperliquid.xyz
HYPERLIQUID_TIMEOUT=10000
HYPERLIQUID_MAX_RETRIES=3
HYPERLIQUID_CACHE_TTL=30

# Arbiscan API (https://etherscan.io/myapikey)
ARBISCAN_BASE_URL=https://api.etherscan.io/v2/api
ARBISCAN_API_KEY=your_api_key_here
ARBISCAN_CHAIN_ID=42161
ARBISCAN_USDC_CONTRACT=0xaf88d065e77c8cC2239327C5EDb3A432268e5831
ARBISCAN_BRIDGE_ADDRESS=0x2Df1c51E09aECF9cacB7bc98cB1742757f163dF7
ARBISCAN_OFFSET_SIZE=10000

# Whale Detection
MIN_WHALE_AMOUNT=10000

# Redis (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Proxy Configuration (for HyperLiquid API)
# ============================================
# HTTP proxies for bypassing rate limits
# All proxies share the same port, user, and password
# Only the host (IP) differs between proxies
#
# On 429 rate limit, the system immediately rotates to the next proxy
# Each successful request also rotates to the next proxy (load balancing)
# If all proxies fail, it waits 10 seconds and retries
#
# Shared settings (apply to all proxies)
# PROXY_PORT=6010
# PROXY_USER=username
# PROXY_PASSWORD=password
#
# Proxy hosts (up to 20 supported)
# PROXY_HOST_1=202.156.27.65
# PROXY_HOST_2=103.149.133.139
# PROXY_HOST_3=210.138.37.180
# PROXY_HOST_4=163.171.89.61
# PROXY_HOST_5=163.171.89.62
